void DFS(int L)
{
	int i, j;

	if (min == 0) return;
	if (L > MS_cnt)
	{
		//Print_List(L);
		if (min > vcnt) min = vcnt;
		return;
	}

	for (i = 1; i <= VS_cnt; i++)
	{
		if (vs[i].Energy <= 0) continue;	// 이미 에너지가 다 떨어졌으므로 파괴되었음
		List[L] = i;
		DFS(L + 1);
		List[L] = 0;
	}
}

